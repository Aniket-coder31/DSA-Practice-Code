import java.util.*;

public class bitmanipulation{
    public static int getbit(int n, int i){
        int bitmask=1<<i;
        if((n&bitmask)==0){
            return 0;
        } else{
            return 1;
        }
    }

    public static int setbit(int n, int i){
        int bitmask=1<<i;
        return n|bitmask;
    }

    public static int clearbit(int n, int i){
        int bitmask=~(1<<i);
        return n&bitmask;
    }

    public static int changeithbit(int n, int i){
        if(getbit(n, i)==0){
            return setbit(n, i);
        } else{
            return clearbit(n, i);
        }
    }

    public static boolean is_negetive(int n){
        if(n<0){
            return true;
        } else{
            return false;
        }
    }

    public static void main(String[] args) {
        Scanner sc= new Scanner(System.in);
        System.out.print("Enter the number - ");
        int num=sc.nextInt();
        if(is_negetive(num)){
            System.out.print("Please enter a positive number - ");
            num=sc.nextInt();
        }
        System.out.print("Enter the bit position you want to change - ");
        int position=sc.nextInt();
        if(is_negetive(position)){
            System.out.print("The position index should be positive - ");
            position=sc.nextInt();
        }
        sc.close();
        
        System.out.println("The Actual number - "+num);
        System.out.println("The actual bit at "+position+" is "+getbit(num, position));
        System.out.println("After updation the number is "+changeithbit(num, position));
    }
}
