public class a {

    public static int largest_num(int numbers[]){
        int largest=Integer.MIN_VALUE;
        for(int i=0;i<numbers.length;i++){
            if(numbers[i]>largest){
                largest=numbers[i];
            }
        }

        return largest;
    }

    public static int smallest_num(int numbers[]){
        int smallest=Integer.MAX_VALUE;
        for(int i=0;i<numbers.length;i++){
            if(numbers[i]<smallest) smallest=numbers[i];
        }

        return smallest;
    }

    public static void main(String[] args) {
        int numbers[]={11,45,78,56,23,97,22,03};
        int largest=largest_num(numbers);
        int smallest=smallest_num(numbers);
        System.out.println("The smallest number is "+smallest+" the largest number is "+largest+".");
    }
}
